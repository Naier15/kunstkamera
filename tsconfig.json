{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "lib": [
      "ES5",
      "ES6",
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./db/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
